import time, sys, Tkinter
from Tkinter import *
class App(Tkinter.Tk):
	def __init__(self, parent):
		Tkinter.Tk.__init__(self, parent)
		self.parent = parent
		self.initialize()
	def initialize(self):
            currentPath = sys.argv[0]
            t = currentPath.rfind("\\")
            currentPath = currentPath[0:(t+1)]
            currentPath.replace("\\", "\\\\")
            print(currentPath)
            GUIPath = currentPath.replace("\\", "\\\\") + "COMethAverager4.0.py"
            print(GUIPath)
            file = open(GUIPath)
            lines = file.readlines()
            file.close()


            for line in lines:
    #k =  line.rfind("C:\\Users\\egregory\\Documents\\Methane_CO_GUI\\", currentPath)
                k =  line.replace("C:\\\Users\\\egregory\\\Documents\\\Methane_CO_GUI", currentPath)
             
            time.sleep(500)
if __name__ == "__main__":
	app = App(None)
	app.title("Methane/CO Averager")
	app.mainloop()
